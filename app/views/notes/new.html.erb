<h1>Write a Note to <%= @recipient.first_name + ' ' + @recipient.last_name %></h1>
<%= form_for(@note, url: @route, method: 'post') do |f| %>
  <%= f.hidden_field :noteable_type, :value => @recipient.type %>
  <%= f.hidden_field :noteable_id, :value => @recipient.id %>
  <%= f.hidden_field :sender_type, :value => @sender.type %>
  <%= f.hidden_field :sender_id, :value => @sender.id %>
  <%= f.label :content %><br/>
  <%= f.text_area :content %><br/>
  <%= f.submit 'Send Note' %>
<% end %>
